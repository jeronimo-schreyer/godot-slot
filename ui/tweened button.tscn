[sub_resource type="GDScript" id=1]
script/source = "extends TextureButton

export (float) var factor
export (float) var duration
export (float) var _rect_pivot_offset

# Called when the node enters the scene tree for the first time.
func _ready():
	rect_pivot_offset.x = rect_size.x * _rect_pivot_offset
	rect_pivot_offset.y = rect_size.y * _rect_pivot_offset

func _on_button_up():
	$Tween.interpolate_property(self,
		\"rect_scale\",
		Vector2(factor, factor), Vector2(1, 1),
		duration,
		Tween.TRANS_QUAD,
		Tween.EASE_IN)
	$Tween.start()

func _on_button_down():
	$Tween.interpolate_property(self,
		\"rect_scale\",
		Vector2(1, 1), Vector2(factor, factor),
		duration,
		Tween.TRANS_QUAD,
		Tween.EASE_IN)
	$Tween.start()
"

